<%- include('partials/header') %>
    <main>
        <div class="form-container">
            <h2>Create An Account</h2>
            <form id="sign-up-form" class="form" action="/create-account" method="post">
                <label for="username">Username:</label>
                <small>A username can contain letters (both upper and lower case) and digits only:</small>
                <input type="text" id="username" name="username" required>
                <br>
                <label for="password">Password:</label>
                <small>A password must be at least 4 characters long (letters and digits only),<br> and must have at
                    least one letter and at least one digit:</small>
                <input type="password" id="password" name="password" required>
                <br>
                <button type="submit">Sign Up</button>
            </form>
            <p>Already have an account? <a href="/sign-in">Sign in here</a>.</p>
        </div>
    </main>
    </div>
    <%- include('partials/footer') %>